<Page
    x:Class="App4di.Dotnet.ChronoView.WinUI.Views.ContactPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="20">
        <Border Style="{StaticResource CardStyle}">
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ðŸ“§" Style="{StaticResource CardIconStyle}"/>

                <StackPanel Grid.Column="1" Spacing="8">
                    <TextBlock Text="Contacts" Style="{StaticResource HeadlineTextStyle}"/>

                    <TextBlock Text="Technical support" Style="{StaticResource MainTextStyle}"/>
                    <TextBlock Style="{StaticResource HyperlinkTextStyle}">
                        <Hyperlink NavigateUri="mailto:support@4dillusions.com">
                            support@4dillusions.com
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Style="{StaticResource SubtleTextStyle}" Text="(technical inquiries about our products)"/>

                    <TextBlock Text="General info" Style="{StaticResource MainTextStyle}"/>
                    <TextBlock Style="{StaticResource HyperlinkTextStyle}">
                        <Hyperlink NavigateUri="mailto:info@4dillusions.com">
                            info@4dillusions.com
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Style="{StaticResource SubtleTextStyle}" Text="(general inquiries)"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
