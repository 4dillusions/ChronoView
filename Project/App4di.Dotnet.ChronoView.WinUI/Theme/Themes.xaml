<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:Controls="using:App4di.Dotnet.ChronoView.WinUI.Control">

    <Style TargetType="Page">
        <Setter Property="Background" Value="{ThemeResource App.BackgroundBrush}"/>
    </Style>
    <Style TargetType="Grid">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="HeadlineTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource App.AccentBrush}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource App.OnSurfaceBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    <Style x:Key="MainTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style x:Key="HyperlinkTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="SubtleTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource App.SubtleTextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource App.SurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="BorderBrush" Value="{ThemeResource App.SurfaceBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="12"/>
    </Style>

    <Style x:Key="CardIconStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="140"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource App.AccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{ThemeResource App.AccentBrush.Darker}"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>
    <Style TargetType="HyperlinkButton">
        <Setter Property="Foreground" Value="{ThemeResource App.AccentBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource App.SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource App.OnSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource App.SurfaceBorderBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>
    <Style TargetType="PasswordBox">
        <Setter Property="Background" Value="{ThemeResource App.SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource App.OnSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource App.SurfaceBorderBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{ThemeResource App.SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource App.OnSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource App.SurfaceBorderBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{ThemeResource App.OnSurfaceBrush}"/>
    </Style>
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{ThemeResource App.OnSurfaceBrush}"/>
    </Style>
    <Style TargetType="ToggleSwitch">
        <Setter Property="Foreground" Value="{ThemeResource App.OnSurfaceBrush}"/>
        <Setter Property="OnContent" Value="On"/>
        <Setter Property="OffContent" Value="Off"/>
    </Style>

    <Style TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource App.OnSurfaceBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style TargetType="muxc:NavigationView">
        <Setter Property="Background" Value="{ThemeResource App.NavBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource App.NavForegroundBrush}"/>
        <Setter Property="IsPaneToggleButtonVisible" Value="True"/>
        <Setter Property="IsSettingsVisible" Value="False"/>
    </Style>
    <Style TargetType="muxc:NavigationViewItem">
        <Setter Property="Foreground" Value="{ThemeResource App.NavForegroundBrush}"/>
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
    </Style>

    <Style TargetType="Controls:TimelineControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:TimelineControl">
                    <Grid x:Name="PART_RootGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Dates -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       x:Name="PART_StartDate"
                                       FontSize="11"
                                       Foreground="{ThemeResource App.SubtleTextBrush}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2"
                                       x:Name="PART_EndDate"
                                       FontSize="11"
                                       Foreground="{ThemeResource App.SubtleTextBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- ScrollViewer + Canvases -->
                        <ScrollViewer Grid.Row="1"
                                      x:Name="PART_ScrollViewer"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled"
                                      HorizontalScrollMode="Enabled"
                                      VerticalScrollMode="Disabled"
                                      ZoomMode="Disabled">
                            <Grid Height="80">
                                <Canvas x:Name="PART_TimelineCanvas"
                                        Height="80"
                                        Background="Transparent"/>
                                <Canvas x:Name="PART_MarkerCanvas"
                                        Height="80"
                                        Background="Transparent"/>
                            </Grid>
                        </ScrollViewer>

                        <!-- Zoom buttons -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="4"
                                    Margin="0,8,0,0">
                            <Button x:Name="PART_ZoomOutBtn"
                                    Content="−"
                                    Width="32"
                                    Height="32"
                                    FontSize="16"
                                    Padding="0"
                                    ToolTipService.ToolTip="Kicsinyítés"/>
                            <Button x:Name="PART_ZoomInBtn"
                                    Content="+"
                                    Width="32"
                                    Height="32"
                                    FontSize="16"
                                    Padding="0"
                                    ToolTipService.ToolTip="Nagyítás"/>
                            <Button x:Name="PART_ResetZoomBtn"
                                    Content="Reset"
                                    Width="32"
                                    Height="32"
                                    FontSize="16"
                                    Padding="0"
                                    ToolTipService.ToolTip="Zoom visszaállítása"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
